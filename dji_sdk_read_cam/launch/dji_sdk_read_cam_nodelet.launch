<?xml version="1.0"?>

<launch>
	<arg name="serial_name" default=""/>
    <arg name="manager" default="/standalone_nodelet" />
    <arg name="drone_name" default="/" />
    <arg name="start_nodelet_manager" default="true" />

    <node pkg="nodelet" type="nodelet" name="dji_sdk_node" args="load dji_sdk_read_cam/DJISDKReadCamNodelet $(arg manager)" output="screen" ns="$(arg drone_name)" launch-prefix="sudo rosenv">
        <!-- node parameters -->
        <param name="output_image_color" type="bool" value="true"/>
		<param name="image_width" type="int" value="1280"/>
		<param name="image_height" type="int" value="720"/>
		<param name="output_image_width" type="int" value="640"/>
		<param name="output_image_height" type="int" value="480"/>
		<param name="tf_prefix" type="string" value="$(arg drone_name)"/>
    </node>

    <node pkg="nodelet" type="nodelet" name="standalone_nodelet" args="manager" output="screen" if="$(arg start_nodelet_manager)"/>

</launch>

